{
    "compilerOptions": {
        "target": "ES2022",
        "module": "es2015",
        "moduleResolution": "bundler",
        "outDir": "./build",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
